<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:orientation="vertical"
    android:padding="20dp"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Usually, students have Member ID as CSEXXXXX and no password. Try it, else contact Library Dept for your credentials!"
        android:textColor="?attr/primaryTextColor"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_4"
        android:hint="Enter your Member ID"
        android:textColor="?attr/primaryTextColor"
        android:textColorHint="?attr/primaryTextColor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_4"
        android:hint="Enter your password(if exists)"
        android:inputType="textPassword"
        android:textColor="?attr/primaryTextColor"
        android:textColorHint="?attr/primaryTextColor"
        android:textSize="15sp"
        tools:ignore="UnusedAttribute" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/remember_me"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="?attr/primaryTextColor"
            android:buttonTint="@color/colorAccent"
            android:text="Remember me"
            android:textColor="?attr/primaryTextColor"
            android:textSize="12sp"
            float:ignore="HardcodedText,UnusedAttribute" />
    </RelativeLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="Submit"
        android:textColor="?attr/colorBackground" />
</LinearLayout>